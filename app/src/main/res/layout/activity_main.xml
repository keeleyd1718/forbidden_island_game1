<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/quitButton"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#FF0000"
                android:text="Quit" />

            <Button
                android:id="@+id/deckButton"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#009688"
                android:text="Treasure Deck" />

            <Button
                android:id="@+id/floodMeter"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#009688"
                android:text="Flood Meter" />

            <SurfaceView
                android:id="@+id/floodView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#004496" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/treasure1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_star" />

                <ImageView
                    android:id="@+id/null1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:color/transparent" />

                <Button
                    android:id="@+id/FOOLS_LANDING"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="FOOLS_LANDING" />

                <Button
                    android:id="@+id/BRONZE_GATE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="BRONZE_GATE" />

                <ImageView
                    android:id="@+id/null2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/treasure2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_star" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/null3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:color/transparent" />

                <Button
                    android:id="@+id/GOLD_GATE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="GOLD_GATE" />

                <Button
                    android:id="@+id/CORAL_PALACE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="CORAL_PALACE" />

                <Button
                    android:id="@+id/SUN_TEMPLE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="SUN_TEMPLE" />

                <Button
                    android:id="@+id/SILVER_GATE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="SILVER_GATE" />

                <ImageView
                    android:id="@+id/null4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/PHANTOM_ROCK"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="PHANTOM_ROCK" />

                <Button
                    android:id="@+id/WATCHTOWER"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="WATCHTOWER" />

                <Button
                    android:id="@+id/COPPER_GATE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="COPPER_GATE" />

                <Button
                    android:id="@+id/ABANDONED_CLIFFS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="ABANDONED_CLIFFS" />

                <Button
                    android:id="@+id/WHISPERING_GARDENS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="WHISPERING_GARDENS" />

                <Button
                    android:id="@+id/SHADOW_CAVE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="SHADOW_CAVE" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/LOST_LAGOON"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="LOST_LAGOON" />

                <Button
                    android:id="@+id/MOON_TEMPLE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="MOON_TEMPLE" />

                <Button
                    android:id="@+id/DECEPTION_DUNES"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="DECEPTION_DUNES" />

                <Button
                    android:id="@+id/TWILIGHT_HOLLOW"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="TWILIGHT_HOLLOW" />

                <Button
                    android:id="@+id/EMBER_CAVE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="EMBER_CAVE" />

                <Button
                    android:id="@+id/TIDAL_PALACE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="TIDAL_PALACE" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/null5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:color/transparent" />

                <Button
                    android:id="@+id/OBSERVATORY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="OBSERVATORY" />

                <Button
                    android:id="@+id/IRON_GATE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="IRON_GATE" />

                <Button
                    android:id="@+id/CRIMSON_FOREST"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="CRIMSON_FOREST" />

                <Button
                    android:id="@+id/MISTY_MARSH"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="MISTY_MARSH" />

                <ImageView
                    android:id="@+id/null6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/treasure3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_star" />

                <ImageView
                    android:id="@+id/null7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:color/transparent" />

                <Button
                    android:id="@+id/BREAKERS_BRIDGE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="BREAKERS_BRIDGE" />

                <Button
                    android:id="@+id/HOWLING_GARDEN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#63B366"
                    android:text="HOWLING_GARDEN" />

                <ImageView
                    android:id="@+id/null8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/treasure4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_star" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/drawTreasureButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#6E9FB5"
                        android:text="Draw Treasure" />

                    <Button
                        android:id="@+id/drawFloodButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#6E9FB5"
                        android:text="Draw Flood" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/moveButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#6E9FB5"
                        android:text="Move" />

                    <Button
                        android:id="@+id/shoreUpButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#6E9FB5"
                        android:text=" Shore Up" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/giveCardButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#6E9FB5"
                        android:text="Give Card" />

                    <Button
                        android:id="@+id/captureTreasureButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#6E9FB5"
                        android:text="Capture" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>